<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_image_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/home_itemlist_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/home_image_item"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Canada"
                android:textColor="@color/dot_dark_screen3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/home_itemlist_name"
                android:text="@string/currancy"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/dot_dark_screen3"
                />

            <TextView
                android:id="@+id/home_listitem_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/home_itemlist_name"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="America"
                android:textColor="@color/dot_dark_screen3"
                />

            <ImageView
                android:id="@+id/home_listitem_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/cart"
                android:layout_below="@+id/home_itemlist_name"
                android:layout_marginLeft="115dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>